{{ 'course-test.css' | asset_url | stylesheet_tag }}

<div class="course_list">
  <h1>{{ section.settings.course_heading }}</h1>
  <div class="courses">
      {% paginate section.settings.collection.products by 6 %}
    {% for product in section.settings.collection.products %}
      <div class="fliter_product_images">
      {% assign images = product.images %}
          {% for image in images %}
            {% if forloop.index == 1 %}
              <img class="product_small_image" src="{{ image.src | product_img_url: 'grande' }}">
            {% endif %}
          {% endfor %}
      </div>
{% endfor %}
      {% endpaginate %}
  </div>
</div>










{% schema %}
  {
    "name": "Course List",
    "settings": [
      {
        "type" : "text",
        "id" : "course_heading",
        "label" : "Add Heading For Section"
      },
      {
        "type" : "richtext",
        "id" : "course_subheading",
        "label" : "Add Sub Heading For Section"
      },
      {
        "type" : "collection",
        "id" : "collection",
        "label" : "Add Collection"
      }
    ],
    "presets" : [
      {
        "name" : "Course List"
      }
    ]
  }
{% endschema %}
