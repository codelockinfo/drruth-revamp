<style>
    .d_flex_main{
      display:flex;
    }
    .width50_cou{
      width:50%
    }
    .width_img_cource{
          width: 410px;
    }
    .container_cources{
      max-width: 120rem;
      margin: auto;
  }
    }
</style>
<section class="page-width container_cources">
  {% assign product = all_products[section.settings.product] %}
  {% for image in product.images limit: 1 %}
    <div class="d_flex_main">
      <div class="width50_cou">
        {{ product.title }}
        {{ product.price | money_without_trailing_zeros }}
        {{ product.vendor }}
      </div>
      <div class="width50_cou">
        <img class="width_img_cource" src="{{ image.src | product_img_url: 'grande' }}">
      </div>
    </div>
  {% endfor %}
</section>

{% schema %}
{
  "name": "Image With text Cources",
  "settings": [
       {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
  ],
  "blocks": [
{
  "type": "collection",
  "name": "Collection",
  "settings": [

       {
  "type": "text",
  "id": "txet_blog",
  "label": "Text"
    }
  ]
}
  ],
  "presets": [
  {
  "name": "Image With text Cources"
  }
  ]
}
{% endschema %}
