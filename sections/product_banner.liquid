{{ 'course-test.css' | asset_url | stylesheet_tag }}

<div class="main_container">
  <div class="product_banner_main_box">
  <div class="product_box">
    {% if section.settings.heading != blank %}
      <h1>{{ section.settings.heading }}</h1>
    {% endif %}
  </div>
  {% if section.settings.product != blank %}
    <div class="product_detailing_area">
      <h3>{{ section.settings.product.title }}</h3>
      <div class="product_image_box">
        {% for image in section.settings.product.images %}
           <img class="product_addon_image" src="{{ image.src | product_img_url: 'grande' }}">     
        {% endfor %}




        
        {{ section.settings.product.image | image_url : width: 3080 | image_tag : width : "100%", height : "100%" }}
      </div>
    </div>
  {% endif %}
  </div>
  
</div>

{% schema %}
{
  "name": "Product Banner",
  "settings": [
    {
      "type" : "text",
      "id" : "heading",
      "label" : "Add Section Heading"
    },
    {
      "type" : "product",
      "id" : "product",
      "label" : "Add Product"
    }
  ],
  "presets" : [
    {
      "name" : "Product Banner"
    }
  ]
}
{% endschema %}
