

<div class="product_banner">
  {% if section.settings.heading != blank %}
    <h1>{{ section.settings.heading }}</h1>
  {% endif %}
</div>







{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
        "type" : "text",
        "id" : "heading",
        "label" : "Add Section Heading"
      },
      {
        "type" : "product",
        "id" : "product",
        "label" : "Add Product"
      }
    ]
  }
{% endschema %}