{{ 'course-test.css' | asset_url | stylesheet_tag }}

<div class="product_banner page-width">
  <div class="product_box">
    {% if section.settings.heading != blank %}
      <h1>{{ section.settings.heading }}</h1>
    {% endif %}
  </div>
  {% if section.settings.product != blank %}
    <div class="product_detailing_area">
      <h3>{{ section.settings.product.title }}</h3>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Product Banner",
  "settings": [
    {
      "type" : "text",
      "id" : "heading",
      "label" : "Add Section Heading"
    },
    {
      "type" : "product",
      "id" : "product",
      "label" : "Add Product"
    }
  ],
  "presets" : [
    {
      "name" : "Product Banner"
    }
  ]
}
{% endschema %}
