  <style>
    .carousel {
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  position: relative;
}

.carousel-item {
  flex: 0 0 100px; /* Adjust this value for smaller image width */
  transition: all 0.3s;
  opacity: 0.6;
}

.carousel-item img {
  max-width: 100%;
  height: auto;
}

.carousel-item.active {
  flex: 0 0 300px; /* Adjust this value for hero image width */
  opacity: 1;
}

.carousel-control-prev,
.carousel-control-next {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.5);
  color: white;
  border: none;
  cursor: pointer;
  padding: 10px 20px;
}

.carousel-control-prev {
  left: 10px;
}

.carousel-control-next {
  right: 10px;
}
  </style>
