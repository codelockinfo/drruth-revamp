
<style>
  .product_section{
    padding : {{ section.setting.padding_top }}px 0 {{ section.setting.padding_bottom }}px 0;
    margin-bottom : 50px;
  }
  .product_box{
    max-width : 1300px;
    margin : 0 auto;
    padding : 0 50px;
    display : flex;
    flex-direction : {{ section.settings.image_placement }};
    border-radius : 24px;
  }
  .product_content{
    width : 60%;
    padding : 30px;
    background-color : #F5F8F1;
    margin : 30px 0;
    border-top-left-radius : 24px;
    border-bottom-left-radius : 24px;
  }
  .product_image{
    width : 40%;
  }
  .product_image>img{
    width : 100%;
    height : 100%;
    object-fit : cover;
    border-radius : 24px;
}
.product_content>h3{
  color: #1E1E1E;
  font-family: Lato;
  font-size: 30px;
  font-style: normal;
  font-weight: 300;
  line-height: 40px;
  letter-spacing: 0.6px;
  text-transform: capitalize;
}
</style>



<div class="product_section">
  <h1>{{ section.settings.heading }}</h1>
  {% if section.settings.product != blank %}
    <div class="product_box">
      <div class="product_content">
        {% if section.settings.product.title != blank %}
          <h3>{{ section.settings.product.title }}</h3>
        {% endif %}
      </div>
      <div class="product_image">
        {% for image in section.settings.product.images %}
            {% if forloop.index == 1 %}
              <img class="product_small_image" src="{{ image.src | product_img_url: 'grande' }}">
            {% endif %}
          {% endfor %}
      </div>
    </div>
  {% endif %}
</div>






{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
        "type" : "text",
        "id" : "heading",
        "label" : "Add Heading"
      },
      {
        "type" : "product",
        "id" : "product",
        "label" : "Add Product"
      },
      {
        "type" : "range",
        "id" : "padding_top",
        "label" : "Padding Top",
        "step" : 4,
        "min" : 0,
        "max" : 100,
        "default" : 0
       },
      {
        "type" : "range",
        "id" : "padding_bottom",
        "label" : "Padding Bottom",
        "step" : 4,
        "min" : 0,
        "max" : 100,
        "default" : 0
      },
      {
        "type" : "select",
        "id" : "image_placement",
        "label" : "Image Placement",
        "options" : [
          {
            "value" : "row-reverse",
            "label" : "Image First"
          },
          {
            "value" : "row",
            "label" : "Image Second"
          }
        ],
        "default" : "row"
      }
    ],
    "presets" : [
      {
        "name" : "Product Section"
      }
    ]
  }
{% endschema %}