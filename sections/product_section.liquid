
<style>
  .product_box{
    max-width : 1300px;
    margin : 0 auto;
    display : flex,
    flex-direction : 
    border-radius : 24px;
  }
  .product_content{
    width : 60%;
    background-color : #F5F8F1;
    margin : 30px 0;
  }
</style>



<div class="product_section">
  <h1>{{ section.settings.heading }}</h1>
  {% if section.settings.product != blank %}
    <div class="product_box">
      <div class="product_content">
      </div>
    </div>
  {% endif %}
</div>






{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
        "type" : "text",
        "id" : "heading",
        "label" : "Add Heading"
      },
      {
        "type" : "product",
        "id" : "product",
        "label" : "Add Product"
      },
      {
        "type" : "range",
        "id" : "padding_top",
        "label" : "Padding Top",
        "step" : 4,
        "min" : 0,
        "max" : 100,
        "default" : 0
       },
      {
        "type" : "range",
        "id" : "padding_bottom",
        "label" : "Padding Bottom",
        "step" : 4,
        "min" : 0,
        "max" : 100,
        "default" : 0
      },
      {
        "type" : "select",
        "id" : "image_placement",
        "label" : "Image Placement",
        "options" : [
          {
            "value" : "row-reverse",
            "label" : "Image First"
          },
          {
            "value" : "row",
            "label" : "Image Second"
          }
        ],
        "default" : "row"
      }
    ],
    "presets" : [
      {
        "name" : "Product Section"
      }
    ]
  }
{% endschema %}